<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Dashboard Card Styles Begin -->
    <style name="TopLeftDashboardCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TopLeftBottomRightCard</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <style name="TopRightDashboardCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TopRightBottomLeftCard</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <style name="BottomLeftDashboardCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TopRightBottomLeftCard</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <style name="BottomRightDashboardCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TopLeftBottomRightCard</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <style name="ShapeAppearanceOverlay.TopLeftBottomRightCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.TopRightBottomLeftCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>
    <!-- Dashboard Card Styles End -->

</resources>
